{
  "manifest_version": 2,
  "name": "Formatting Formula",
  "description": "Chrome Extension",
  "version": "1.0",
  "author": "@javascriptninja815",
  "background": {
    "persistent": false,
    "scripts": [ "background.js" ]
  },
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*",
    "file:///*"
  ],
  "content_scripts" : [
    {
      "matches": ["http://*/*", "https://*/*", "file:///*"],
      "js": ["jquery.js", "myscript.js"],
      "css": ["formatter.css"]
    }
  ],
  "browser_action": {
    "default_icon": "anaplan.png",
    "default_title": "Formatting",
    "default_popup": "popup.html"
  }
}